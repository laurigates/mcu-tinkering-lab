# ESP32 Kids Audio Toy - SDK Configuration Defaults

# Enable ADC calibration for accurate potentiometer readings
CONFIG_ADC_CAL_EFUSE_TP_ENABLE=y
CONFIG_ADC_CAL_EFUSE_VREF_ENABLE=y

# Set log level (INFO for normal operation, DEBUG for troubleshooting)
CONFIG_LOG_DEFAULT_LEVEL_INFO=y

# FreeRTOS configuration
CONFIG_FREERTOS_HZ=1000

# Watchdog timers (increase if needed for debugging)
CONFIG_ESP_TASK_WDT_TIMEOUT_S=10
